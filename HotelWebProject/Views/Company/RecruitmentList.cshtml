<div class="outdiv">
    <div class="titlediv">
        <div class="position">
            招聘职位
        </div>
        <div class="place">
            工作地点
        </div>
        <div class="needcount">
            招聘人数
        </div>
        <div class="detail">
            详情
        </div>
    </div>
    @{
        List<Models.Recruitment> recruitmentList = new BLL.RecruitmentManager().GetAllRecruitment();
        foreach (Models.Recruitment item in recruitmentList)
        {
            <div class="itemdiv">
                <div class="position">
                    <a href="/Company/RecruitmentDetail?PostId=@item.PostId" target="_blank">@item.PostName</a>
                </div>
                <div class="place">
                    @item.PostPlace
                </div>
                <div class="needcount">
                    @item.RequireCount
                </div>
                <div class="detail">
                    <a href="/Company/RecruitmentDetail?PostId=@item.PostId" target="_blank">详情</a>
                </div>
            </div>
        }
    }    
</div>

